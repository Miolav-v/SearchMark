{
  "manifest_version": 3,
  "name": "SearchMark",
  "version": "3.0",
  "description": "Find your bookmarked pages by searching not only their titles and web addresses, but also their contents!",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "images/logo48.png",
    "default_title": "Dev Search Bookmarked Page Contents",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/logo16.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
